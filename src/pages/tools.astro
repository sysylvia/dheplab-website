---
import BaseLayout from '../layouts/BaseLayout.astro';

const tools = [
  {
    name: "AugMed",
    tagline: "Open-source experimental platform",
    description: "A platform for running behavioral experiments with healthcare providers to evaluate clinical decision support systems and study human-AI interaction in medical settings.",
    status: "Active",
    github: "https://github.com/dheplab/augmed",
    features: ["Provider experiments", "Vignette-based testing", "Response time tracking", "Configurable scenarios"]
  },
  {
    name: "CareLoom",
    tagline: "Home visiting program platform",
    description: "An open-source platform supporting community health workers delivering maternal and child health home visiting programs. Originally developed as 'Healthy Future' for rural China, now being adapted for deployment in Kenya and other LMICs with AI-enhanced content recommendations and localization support.",
    status: "Active",
    github: "https://github.com/dheplab/careloom",
    features: ["Home visit scheduling", "Stage-based curriculum delivery", "CHW workflow support", "AI content recommendations"]
  },
  {
    name: "Sentinel",
    tagline: "Public health surveillance platform",
    description: "An information market-based participatory surveillance platform for public health monitoring in low- and middle-income countries. Enables community-driven early warning systems for disease outbreaks by aggregating local health observations into actionable surveillance signals.",
    status: "Research",
    features: ["Information markets", "Community surveillance", "Disease outbreak detection", "LMIC deployment"]
  }
];
---

<BaseLayout title="Tools" description="Open-source tools and platforms developed by DHEPLab for digital health research.">
  <!-- Hero -->
  <section class="relative py-20 bg-cover bg-center" style="background-image: linear-gradient(135deg, rgba(255, 255, 255, 0.88) 0%, rgba(245, 244, 240, 0.85) 100%), url('/images/heroes/research-hero.jpg');">
    <div class="container">
      <p class="eyebrow text-carolina mb-4">Open Source</p>
      <h1 class="text-4xl md:text-5xl font-display text-navy mb-6">Tools & Platforms</h1>
      <p class="text-xl text-charcoal max-w-2xl">
        We build and share tools that advance digital health research and enable
        rigorous evaluation of healthcare innovations.
      </p>
    </div>
  </section>

  <!-- Tools Grid -->
  <section class="py-16 bg-paper">
    <div class="container">
      <div class="grid gap-8">
        {tools.map((tool) => (
          <div class="card card-featured">
            <div class="flex flex-col md:flex-row md:items-start gap-6">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-3">
                  <h2 class="text-2xl font-display text-navy">{tool.name}</h2>
                  <span class={`text-xs px-2 py-1 rounded ${
                    tool.status === 'Active' ? 'bg-green-100 text-green-700' :
                    tool.status === 'In Development' ? 'bg-yellow-100 text-yellow-700' :
                    'bg-carolina-pale text-carolina-dark'
                  }`}>
                    {tool.status}
                  </span>
                </div>
                <p class="text-carolina font-medium mb-3">{tool.tagline}</p>
                <p class="text-charcoal leading-relaxed mb-4">{tool.description}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {tool.features.map((feature) => (
                    <span class="text-xs bg-cream text-slate px-2 py-1 rounded">{feature}</span>
                  ))}
                </div>
                {tool.github && (
                  <a href={tool.github} class="inline-flex items-center gap-2 text-carolina font-medium text-sm hover:text-carolina-dark transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                    View on GitHub
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contribute CTA -->
  <section class="py-16 bg-carolina-pale">
    <div class="container text-center">
      <h2 class="text-2xl font-display text-navy mb-4">Contribute to Our Tools</h2>
      <p class="text-slate mb-6 max-w-xl mx-auto">
        Our tools are open source. We welcome contributions from researchers, developers,
        and healthcare professionals.
      </p>
      <a href="/contact" class="btn-primary">Get Involved</a>
    </div>
  </section>
</BaseLayout>
