---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch with DHEPLab for research collaborations, speaking requests, or general inquiries.">

  <!-- Hero -->
  <section class="relative text-white py-20 bg-cover bg-center" style="background-image: linear-gradient(135deg, rgba(19, 41, 75, 0.9) 0%, rgba(19, 41, 75, 0.75) 100%), url('/images/heroes/contact-hero.jpg');">
    <div class="container">
      <p class="eyebrow text-carolina-light mb-4">Get in Touch</p>
      <h1 class="text-4xl md:text-5xl font-display text-white mb-6">Contact Us</h1>
      <p class="text-xl text-white/80 max-w-2xl">
        Interested in collaboration, have a question about our research,
        or want to learn more about our work? We'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-16 bg-paper">
    <div class="container">
      <div class="grid md:grid-cols-2 gap-16">

        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-display text-navy mb-6">Send a Message</h2>
          <form class="space-y-6">
            <div class="grid sm:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-charcoal mb-2">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-stone bg-white text-charcoal placeholder:text-slate focus:outline-none focus:border-carolina focus:ring-1 focus:ring-carolina"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-charcoal mb-2">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-stone bg-white text-charcoal placeholder:text-slate focus:outline-none focus:border-carolina focus:ring-1 focus:ring-carolina"
                  placeholder="you@example.com"
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-charcoal mb-2">Subject</label>
              <select
                id="subject"
                name="subject"
                class="w-full px-4 py-3 rounded-lg border border-stone bg-white text-charcoal focus:outline-none focus:border-carolina focus:ring-1 focus:ring-carolina"
              >
                <option value="">Select a topic</option>
                <option value="collaboration">Research Collaboration</option>
                <option value="speaking">Speaking Request</option>
                <option value="student">Student Inquiry</option>
                <option value="media">Media/Press</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-charcoal mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 rounded-lg border border-stone bg-white text-charcoal placeholder:text-slate focus:outline-none focus:border-carolina focus:ring-1 focus:ring-carolina resize-none"
                placeholder="Tell us about your inquiry..."
              ></textarea>
            </div>

            <button type="submit" class="btn-primary">
              Send Message
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-display text-navy mb-6">Contact Information</h2>

          <div class="space-y-8">
            <!-- Address -->
            <div>
              <h3 class="font-semibold text-navy mb-2">Address</h3>
              <p class="text-slate">
                Digital Health Economics & Policy Lab<br />
                Department of Health Policy and Management<br />
                UNC Gillings School of Global Public Health<br />
                Chapel Hill, NC 27599
              </p>
            </div>

            <!-- Email -->
            <div>
              <h3 class="font-semibold text-navy mb-2">Email</h3>
              <a href="mailto:dheplab@unc.edu" class="text-carolina hover:text-carolina-dark transition-colors">
                dheplab@unc.edu
              </a>
            </div>

            <!-- Social -->
            <div>
              <h3 class="font-semibold text-navy mb-3">Follow Us</h3>
              <div class="flex gap-4">
                <a href="https://twitter.com/dheplab" class="text-slate hover:text-carolina transition-colors" aria-label="Twitter">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                </a>
                <a href="https://linkedin.com/company/dheplab" class="text-slate hover:text-carolina transition-colors" aria-label="LinkedIn">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </a>
                <a href="https://github.com/dheplab" class="text-slate hover:text-carolina transition-colors" aria-label="GitHub">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
                </a>
              </div>
            </div>

            <!-- Map placeholder -->
            <div class="bg-stone rounded-lg h-48 flex items-center justify-center">
              <span class="text-slate">üìç UNC Chapel Hill</span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>
