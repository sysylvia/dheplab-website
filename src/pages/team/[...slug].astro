---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

// Get all team members for static paths
export async function getStaticPaths() {
  const team = await getCollection('team');
  return team.map((member) => ({
    params: { slug: member.id },
    props: { entry: member },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

// Get initials for fallback avatar
const initials = entry.data.name.split(' ').map(n => n[0]).join('');
---

<BaseLayout
  title={entry.data.name}
  description={entry.data.bio}
>

  <article class="py-12 md:py-20">
    <div class="container max-w-4xl">

      <!-- Breadcrumbs -->
      <nav class="text-sm text-slate mb-8">
        <a href="/" class="hover:text-carolina transition-colors">Home</a>
        <span class="mx-2">/</span>
        <a href="/team" class="hover:text-carolina transition-colors">Team</a>
        <span class="mx-2">/</span>
        <span class="text-charcoal">{entry.data.name}</span>
      </nav>

      <!-- Profile Header -->
      <header class="mb-12">
        <div class="flex flex-col md:flex-row gap-8 items-start">
          <!-- Profile Image -->
          <div class="flex-shrink-0">
            {entry.data.image ? (
              <img
                src={entry.data.image}
                alt={entry.data.name}
                class="w-40 h-40 md:w-48 md:h-48 rounded-full object-cover shadow-lg"
              />
            ) : (
              <div class="w-40 h-40 md:w-48 md:h-48 rounded-full bg-gradient-to-br from-carolina-light to-carolina flex items-center justify-center text-white text-5xl font-display shadow-lg">
                {initials}
              </div>
            )}
          </div>

          <!-- Profile Info -->
          <div class="flex-1">
            <h1 class="text-3xl md:text-4xl font-display text-navy mb-2">
              {entry.data.name}
            </h1>

            <div class="flex flex-wrap items-center gap-2 text-lg mb-4">
              <span class="text-carolina font-medium">{entry.data.role}</span>
              {entry.data.title && (
                <>
                  <span class="text-stone">â€¢</span>
                  <span class="text-slate">{entry.data.title}</span>
                </>
              )}
            </div>

            {entry.data.email && (
              <a
                href={`mailto:${entry.data.email}`}
                class="inline-flex items-center gap-2 text-charcoal hover:text-carolina transition-colors mb-4"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                {entry.data.email}
              </a>
            )}

            <!-- Social Links -->
            {entry.data.links && (
              <div class="flex flex-wrap gap-4 mt-4">
                {entry.data.links.linkedin && (
                  <a href={entry.data.links.linkedin} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-sm text-slate hover:text-carolina transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                    LinkedIn
                  </a>
                )}
                {entry.data.links.scholar && (
                  <a href={entry.data.links.scholar} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-sm text-slate hover:text-carolina transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/></svg>
                    Google Scholar
                  </a>
                )}
                {entry.data.links.website && (
                  <a href={entry.data.links.website} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-sm text-slate hover:text-carolina transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                    Website
                  </a>
                )}
                {entry.data.links.twitter && (
                  <a href={entry.data.links.twitter} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-sm text-slate hover:text-carolina transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                    Twitter/X
                  </a>
                )}
                {entry.data.links.github && (
                  <a href={entry.data.links.github} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-sm text-slate hover:text-carolina transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                    GitHub
                  </a>
                )}
                {entry.data.links.orcid && (
                  <a href={entry.data.links.orcid} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-sm text-slate hover:text-carolina transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 0 1-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-2.016-1.284-3.722-4.097-3.722h-2.222z"/></svg>
                    ORCID
                  </a>
                )}
              </div>
            )}
          </div>
        </div>
      </header>

      <!-- Bio Content -->
      <div class="prose prose-lg prose-slate max-w-none mb-12">
        <Content />
      </div>

      <!-- Education -->
      {entry.data.education && entry.data.education.length > 0 && (
        <section class="mb-12 p-6 bg-cream rounded-lg">
          <h2 class="text-xl font-display text-navy mb-4">Education</h2>
          <ul class="space-y-2">
            {entry.data.education.map((edu) => (
              <li class="flex items-start gap-3 text-charcoal">
                <svg class="w-5 h-5 text-carolina flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
                </svg>
                <span>{edu}</span>
              </li>
            ))}
          </ul>
        </section>
      )}

      <!-- Back to Team -->
      <nav class="border-t border-stone pt-8">
        <a
          href="/team"
          class="inline-flex items-center gap-2 text-carolina hover:text-carolina-dark transition-colors font-medium"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Team
        </a>
      </nav>

    </div>
  </article>

</BaseLayout>

<style>
  /* Prose Styling for Bio Content */
  .prose {
    & h2 {
      font-family: var(--font-display);
      font-size: 1.5rem;
      font-weight: 400;
      color: var(--color-navy);
      margin-top: 2rem;
      margin-bottom: 0.75rem;
    }

    & h3 {
      font-family: var(--font-body);
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--color-charcoal);
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
    }

    & p {
      font-family: var(--font-body);
      font-size: 1.125rem;
      line-height: 1.8;
      color: var(--color-charcoal);
      margin-bottom: 1.25rem;
    }

    & a {
      color: var(--color-carolina);
      text-decoration: none;
      border-bottom: 1px solid var(--color-carolina-light);
      transition: all var(--transition-base) ease;
    }

    & a:hover {
      color: var(--color-carolina-dark);
      border-bottom-color: var(--color-carolina-dark);
    }

    & ul {
      margin-bottom: 1.25rem;
      padding-left: 1.5rem;
      list-style-type: disc;
    }

    & li {
      margin-bottom: 0.5rem;
      line-height: 1.7;
    }

    & li::marker {
      color: var(--color-carolina);
    }

    & strong {
      font-weight: 600;
      color: var(--color-navy);
    }
  }
</style>
